<body>
    <h1>Welcome to Cwetter</h1>
    <form action ="/register", method = "post">
        <div class="mb-3">
          <label for="title" class="form-label" >Username</label>
          <input type="text" class="form-control" name="username" placeholder = "Ex:Botak" required >
          <div class="form-text"></div>
        </div>
        <div class="mb-3">
          <label for="title" class="form-label" >Email</label>
          <input type="email" class="form-control" name="email" placeholder = "Ex:sesuatu@gmail.com" required >
          <div class="form-text"></div>
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Password</label>
          <input type="text" class="form-control" name = "password" placeholder= 'Ex:Securepass23' required>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Role</label>
            <input type="text" class="form-control"name = 'role' placeholder = 'Ex: admin' required>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
       

      </form>
