<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sosial Media</title>
    <style>
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <h1>Home</h1>
  <form action="/home" method="get">
    <input type="text" name="search">
    <input type="submit" value ="Search By Content">
  </form>

    <% data.forEach(el => { %>
        <h4>User : <%= el.User.username %></h4>
        <div class="card" style="width: 18rem;">
            <img src="<%=el.imageUrl%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= el.title %></h5>
              <h6> Content : <%= formatContent(el.content) %></h6>
                <% el.User.Comments.forEach(element => { %>
                    <label>Comment :</label>
                   <p> <%= element.text %></p>
                <% }) %>
              <a href="/home/profile/<%= el.User.id %>" class="btn btn-primary">Profile</a>
              <a href="/home/add/" style="background-color: aquamarine; color: black"  class="btn btn-primary">Add New Post</a>
              <a href="/home/delete/<%= el.id %>" style="background-color: red;" class="btn btn-primary" >Delete</a>
              <a href= "/home/edit/<%= el.id %>" style = "background-color: yellow; color: black" class=" btn btn-primary"> Edit</a>
            </div>
          </div>
<% }) %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
